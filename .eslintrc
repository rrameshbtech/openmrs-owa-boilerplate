{
  "parser": "babel-eslint",
  "rules": {
    "prettier/prettier": "warn",
    "max-len": [
      1,
      80,
      2,
      {
        "ignoreComments": true
      }
    ],
    "jsx-a11y/no-autofocus": [
      1,
      {
        "ignoreNonDOM": true
      }
    ],
    "react/jsx-uses-vars": 1,
    "react/prop-types": 0
  },
  "plugins": [
    "react",
    "prettier",
    "jsx-a11y",
    "import",
    "cypress"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:jsx-a11y/recommended",
    "plugin:import/errors",
    "plugin:import/warnings",
    "prettier",
    "prettier/react"
  ],
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "env": {
    "browser": true,
    "es6": true,
    "node": true,
    "jest": true
  },
  "globals": {}
}