{
  "name": "openmrs-owa-boilerplate",
  "version": "1.0.0",
  "description": "Boilerplate for building OpenMRS owa apps based on PWA",
  "main": "index.jsx",
  "private": true,
  "keywords": [
    "React",
    "OpenMRS",
    "OWA"
  ],
  "author": "",
  "license": "MIT",
  "scripts": {
    "openmrs-start": "cd openMRS && docker-compose up -d",
    "openmrs-restart": "npm run openmrs-stop && npm run openmrs-start",
    "openmrs-stop": "cd openMRS && docker-compose stop",
    "openmrs-clean": "cd openMRS && docker-compose rm -fv",
    "build": "webpack --config webpack.config.js --mode production",
    "scan": "hawkeye scan",
    "start": "webpack --mode development --watch",
    "test": "jest",
    "test-watch": "jest --watchAll"
  },
  "dependencies": {
    "react": "^16.11.0",
    "react-dom": "^16.11.0"
  },
  "devDependencies": {
    "@babel/core": "^7.7.7",
    "@babel/cli": "^7.6.4",
    "@babel/preset-env": "^7.6.3",
    "@babel/preset-react": "^7.6.3",
    "@openmrs/style-referenceapplication": "^0.1.0",
    "babel-eslint": "^10.0.3",
    "babel-loader": "^8.0.6",
    "clean-webpack-plugin": "^3.0.0",
    "copy-webpack-plugin": "^5.0.4",
    "core-js": "^3.6.0",
    "css-loader": "^3.2.0",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.15.1",
    "eslint": "^6.5.1",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-prettier": "^6.9.0",
    "eslint-formatter-friendly": "^7.0.0",
    "eslint-loader": "^3.0.2",
    "eslint-plugin-cypress": "^2.6.1",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-react": "^7.16.0",
    "html-webpack-plugin": "^3.2.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^24.9.0",
    "node-sass": "^4.13.0",
    "postcss-loader": "^3.0.0",
    "postcss-preset-env": "^6.7.0",
    "prettier": "^1.19.1",
    "sass-loader": "^8.0.0",
    "style-loader": "^1.0.0",
    "stylelint": "^11.0.0",
    "stylelint-config-recommended": "^3.0.0",
    "stylelint-webpack-plugin": "^1.0.2",
    "webpack": "^4.41.5",
    "webpack-cli": "^3.3.9",
    "workbox-webpack-plugin": "^4.3.1"
  },
  "engines": {
    "node": "12.9.1",
    "npm": "6.11.2"
  },
  "jest": {
    "moduleNameMapper": {
      "\\.(css|less|sass|scss|svg)$": "identity-obj-proxy"
    },
    "setupFilesAfterEnv": [
      "<rootDir>tests/setupTests.js"
    ]
  }
}
