{
  "name": "openmrs-owa-boilerplate",
  "version": "1.0.0",
  "description": "Boilerplate for building OpenMRS owa apps based on PWA",
  "main": "index.jsx",
  "private": true,
  "keywords": [
    "React",
    "OpenMRS",
    "OWA"
  ],
  "author": "",
  "license": "MIT",
  "scripts": {
    "openmrs-stop": "cd openMRS && docker-compose stop && docker-compose rm -fv",
    "openmrs-up": "cd openMRS && docker-compose up -d",
    "openmrs-start": "npm run openmrs-stop && npm run openmrs-up",
    "build": "webpack --config webpack.config.js --mode production",
    "scan": "npx hawkeye scan",
    "start": "webpack --mode development --watch",
    "test": "jest",
    "test-watch": "jest --watchAll"
  },
  "dependencies": {
    "react": "^16.9.0",
    "react-dom": "^16.9.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.5.5",
    "@babel/core": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "@babel/preset-react": "^7.0.0",
    "@hawkeyesec/scanner-cli": "^1.6.2",
    "@openmrs/style-referenceapplication": "^0.1.0",
    "babel-eslint": "^10.0.2",
    "babel-loader": "^8.0.6",
    "clean-webpack-plugin": "^3.0.0",
    "copy-webpack-plugin": "^5.0.4",
    "core-js": "^3.2.0",
    "css-loader": "^3.2.0",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.14.0",
    "eslint": "^6.1.0",
    "eslint-config-airbnb": "^17.1.1",
    "eslint-config-prettier": "^6.0.0",
    "eslint-formatter-friendly": "^7.0.0",
    "eslint-loader": "^2.2.1",
    "eslint-plugin-cypress": "^2.6.1",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.14.3",
    "html-webpack-plugin": "^3.2.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^24.8.0",
    "node-sass": "^4.12.0",
    "postcss-loader": "^3.0.0",
    "postcss-preset-env": "^6.7.0",
    "prettier": "^1.18.2",
    "sass-loader": "^7.1.0",
    "style-loader": "^1.0.0",
    "stylelint": "^10.1.0",
    "stylelint-config-recommended": "^2.2.0",
    "stylelint-webpack-plugin": "^0.10.5",
    "webpack": "^4.39.1",
    "webpack-cli": "^3.3.6",
    "webpack-dev-server": "^3.7.2",
    "workbox-webpack-plugin": "^4.3.1"
  },
  "engines": {
    "node": "12.7.0",
    "npm": "6.10.2"
  },
  "jest": {
    "moduleNameMapper": {
      "\\.(css|less|sass|scss|svg)$": "identity-obj-proxy"
    },
    "setupFilesAfterEnv": [
      "<rootDir>tests/setupTests.js"
    ]
  }
}
